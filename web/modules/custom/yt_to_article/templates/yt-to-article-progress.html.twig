{#
/**
 * @file
 * Template for the progress display.
 *
 * Available variables:
 * - request_id: The request ID for tracking.
 * - initial_status: The initial status message.
 */
#}
<div class="yt-to-article-progress-wrapper" data-request-id="{{ request_id }}">
  <div class="yt-to-article-connection-status status-connecting">
    {{ 'Connecting...'|t }}
  </div>
  
  <div class="yt-to-article-progress">
    <div class="yt-to-article-progress-container">
      <div class="yt-to-article-progress-bar" 
           role="progressbar" 
           aria-valuenow="0" 
           aria-valuemin="0" 
           aria-valuemax="100"
           style="width: 0%;">
      </div>
    </div>
    <div class="yt-to-article-progress-text">0%</div>
  </div>
</div>