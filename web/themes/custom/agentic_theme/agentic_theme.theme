<?php

/**
 * @file
 * Agentic Theme - Bootstrap Barrio Subtheme.
 */

use Drupal\Core\Form\FormStateInterface;

/**
 * Implements hook_preprocess_HOOK() for html templates.
 */
function agentic_theme_preprocess_html(&$variables) {
  // Add custom classes to body
  $variables['attributes']['class'][] = 'agentic-theme';
  
  // Add viewport meta tag for responsive design
  $viewport = [
    '#type' => 'html_tag',
    '#tag' => 'meta',
    '#attributes' => [
      'name' => 'viewport',
      'content' => 'width=device-width, initial-scale=1, shrink-to-fit=no',
    ],
  ];
  $variables['page']['#attached']['html_head'][] = [$viewport, 'viewport'];
}

/**
 * Implements hook_preprocess_page().
 */
function agentic_theme_preprocess_page(&$variables) {
  // Add container classes based on configuration
  $variables['container'] = theme_get_setting('agentic_theme_container') ?: 'container';
}

/**
 * Implements hook_preprocess_node().
 */
function agentic_theme_preprocess_node(&$variables) {
  // Add specific classes for YouTube articles
  if ($variables['node']->bundle() == 'youtube_article') {
    $variables['attributes']['class'][] = 'youtube-article-node';
    $variables['#attached']['library'][] = 'agentic_theme/youtube_article';
  }
}

/**
 * Implements hook_theme_suggestions_HOOK_alter() for form templates.
 */
function agentic_theme_theme_suggestions_form_alter(array &$suggestions, array $variables) {
  if ($variables['element']['#form_id'] == 'yt_to_article_form') {
    $suggestions[] = 'form__yt_to_article';
  }
}

/**
 * Implements hook_form_alter().
 */
function agentic_theme_form_alter(&$form, FormStateInterface $form_state, $form_id) {
  // Add Bootstrap classes to forms
  if (isset($form['actions']['submit'])) {
    $form['actions']['submit']['#attributes']['class'][] = 'btn';
    $form['actions']['submit']['#attributes']['class'][] = 'btn-primary';
  }
  
  if (isset($form['actions']['preview'])) {
    $form['actions']['preview']['#attributes']['class'][] = 'btn';
    $form['actions']['preview']['#attributes']['class'][] = 'btn-secondary';
  }
  
  // Attach special styling for YT to Article form
  if ($form_id == 'yt_to_article_form') {
    $form['#attached']['library'][] = 'agentic_theme/yt_to_article_form';
  }
}