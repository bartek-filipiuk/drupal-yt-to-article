{# FORMS #}

{# 1. Contact Form #}
<form class="bg-white p-8 rounded-xl shadow-lg max-w-2xl mx-auto">
  <h2 class="text-2xl font-bold mb-6">Get in Touch</h2>
  
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
    <div>
      <label class="drupal-field-label">First Name</label>
      <input type="text" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-drupal-primary focus:border-transparent transition-all">
    </div>
    <div>
      <label class="drupal-field-label">Last Name</label>
      <input type="text" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-drupal-primary focus:border-transparent transition-all">
    </div>
  </div>
  
  <div class="mb-6">
    <label class="drupal-field-label">Email</label>
    <input type="email" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-drupal-primary focus:border-transparent transition-all">
  </div>
  
  <div class="mb-6">
    <label class="drupal-field-label">Message</label>
    <textarea rows="4" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-drupal-primary focus:border-transparent transition-all"></textarea>
  </div>
  
  <button type="submit" class="drupal-button w-full md:w-auto">
    Send Message
  </button>
</form>

