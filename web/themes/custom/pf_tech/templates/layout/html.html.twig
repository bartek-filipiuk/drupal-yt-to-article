{#
/**
 * @file
 * Theme override for the basic structure of a single Drupal page.
 *
 * Variables:
 * - logged_in: A flag indicating if user is logged in.
 * - root_path: The root path of the current page (e.g., node, admin, user).
 * - node_type: The content type for the current node, if the page is a node.
 * - head_title: List of text elements that make up the head_title variable.
 *   May contain or more of the following:
 *   - title: The title of the page.
 *   - name: The name of the site.
 *   - slogan: The slogan of the site.
 * - page_top: Initial rendered markup. This should be printed before 'page'.
 * - page: The rendered page markup.
 * - path_info.args: Array of URL arguments un aliassed.
 * - page_bottom: Closing rendered markup. This variable should be printed after
 *   'page'.
 * - db_offline: A flag indicating if the database is offline.
 * - placeholder_token: The token for generating head, css, js and js-bottom
 *   placeholders.
 *
 * @see template_preprocess_html()
 */
#}
{%
  set body_classes = [
    logged_in ? 'user-logged-in',
    not root_path ? 'path-frontpage' : 'path-' ~ root_path|clean_class,
    node_type ? 'node--type-' ~ node_type|clean_class,
    db_offline ? 'db-offline',
  ]
%}
<!DOCTYPE html>
<html{{ html_attributes }}>
  <head>
    <head-placeholder token="{{ placeholder_token|raw }}">
    <title>{{ head_title|safe_join(' | ') }}</title>
    <css-placeholder token="{{ placeholder_token|raw }}">

    {# Tailwind CSS CDN for Development - Replace with production build later #}
    <script src="https://cdn.tailwindcss.com?plugins=typography,aspect-ratio,forms"></script>
    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              'drupal': {
                'primary': '#0678BE',
                'secondary': '#00ACC1',
                'text': '#0F172A',
                'muted': '#6B7280',
                'border': '#E6E8EF',
                'surface': '#F8F9FB',
              }
            },
            fontFamily: {
              'sans': ['Inter', 'IBM Plex Sans', 'system-ui', '-apple-system', 'sans-serif'],
              'mono': ['JetBrains Mono', 'Fira Code', 'monospace'],
            },
            maxWidth: {
              'content': '880px',
              'prose': '65ch',
            },
            typography: {
              DEFAULT: {
                css: {
                  color: '#0F172A',
                  a: {
                    color: '#0678BE',
                    '&:hover': {
                      color: '#00ACC1',
                    },
                  },
                },
              },
            }
          }
        }
      }
    </script>

    {# Custom Tailwind styles for Drupal-specific components #}
    <style type="text/tailwindcss">
      @layer components {
        .drupal-button {
          @apply inline-flex items-center px-4 py-2 bg-drupal-primary text-white font-medium rounded-md hover:bg-drupal-secondary transition-colors duration-200;
        }

        .drupal-card {
          @apply bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow duration-200;
        }

        .drupal-field-label {
          @apply font-semibold text-drupal-text mb-2;
        }

        .drupal-tag {
          @apply inline-block px-3 py-1 bg-drupal-surface text-drupal-text text-sm rounded-full border border-drupal-border hover:bg-drupal-primary hover:text-white hover:border-drupal-primary transition-all duration-200;
        }

        .drupal-prose {
          @apply prose prose-lg max-w-none prose-headings:text-drupal-text prose-p:text-drupal-text prose-a:text-drupal-primary prose-a:no-underline hover:prose-a:underline;
        }
      }

      @layer utilities {
        .drupal-container {
          @apply max-w-7xl mx-auto px-4 sm:px-6 lg:px-8;
        }

        .drupal-section {
          @apply py-8 sm:py-12 lg:py-16;
        }
      }
    </style>

    <js-placeholder token="{{ placeholder_token|raw }}">
  </head>
  <body{{ attributes.addClass(body_classes) }}>
    {{ page_top }}
    {{ page }}
    {{ page_bottom }}
    <js-bottom-placeholder token="{{ placeholder_token|raw }}">
  </body>
</html>
